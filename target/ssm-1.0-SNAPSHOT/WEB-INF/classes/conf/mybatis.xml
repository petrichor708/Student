<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="logImpl" value="STDOUT_LOGGING"/><!--添加日志-->
    </settings>
    <!--设置别名-->
    <typeAliases>
        <!--name:实体类所在的包名（不是实体类也可以）-->
        <package name="com.lala.domain"/>
    </typeAliases>
    <!--mapper resource=""或者packge name=“mapper文件所在的包名”-->
    <mappers>
        <!--
        name:是包名，这个包中的所有mapper.xml一次就能加载使用package的要求：
            1.mapper文件名称和dao接口名必须完全一样，包括大小写
            2、mapper文件和dao接口必须在同一目录
        -->
        <package name="com.lala.dao"/>
    </mappers>
</configuration>